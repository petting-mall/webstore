<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon" />
  <!-- CSS -->
  <link rel="stylesheet" href="stylesheets/style.css" />
  <% cssList.forEach(css => { %>
    <link rel="stylesheet" href="stylesheets/<%= css %>" />
  <% }) %>
  <!-- Scripts -->
  <% scriptList.forEach(script => { %>
    <script src="javascripts/<%= script %>" defer></script>
  <% }) %>
  <% scriptModuleList.forEach(script => { %>
    <script src="javascripts/<%= script %>" type="module" defer></script>
  <% }) %>
  <title><%= title %> </title>
</head>

<body>
  <header>
    <nav class="navbar">
      <img class="menu-icon" id="menu-icon" src="images/menu-hamburger_icon.svg" alt="Ícone do menu" />
      <a href="#"><img class="logo-menu" src="images/logo-petting-mall.png" alt="Logo da Petting Mall" /></a>

      <div class="search-container">
        <span><img class="search-icon" src="images/menu-magnifying-glass.svg" alt="Ícone de lupa" /></span>
        <input class="search-box" type="search" name="search" placeholder="Digite o nome do produto" />
        <button class="search-button" type="submit">Buscar</button>
      </div>

      <div class="navbar-icons">
        <a href="#"><img src="images/menu-login-icon.png" alt="Ícone de login" /></a>
        <a href="#"><img src="images/menu-cart-icon.png" alt="Ícone do carrinho de compras" /></a>
      </div>

    <ul class="menu-nav">
      <li><a href="#">Alimentação</a></li>
      <li><a href="#">Acessórios</a></li>
      <li><a href="#">Brinquedos</a></li>
      <li><a href="#">Cama & Mesa & Banho</a></li>
      <li><a href="#">Cosméticos</a></li>
      <li><a href="#">Roupas</a></li>
    </ul>
  
   </nav>
  </header>